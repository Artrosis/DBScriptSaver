<Window
    x:Class="DBScriptSaver.fmProjectsEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DBScriptSaver"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Icon="ico/main.ico"
    Title="Проекты"
    WindowStartupLocation="CenterOwner">

    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <StackPanel
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Top" >
                <Button
                    Width="75"
                    Height="23"
                    Margin="3"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Click="btnAdd_Click"
                    Content="Добавить"/>
            </StackPanel>
            <DataGrid
                x:Name="gcProjects"
                Width="auto"
                Height="auto"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                ItemsSource="{Binding EditProjects, Mode=TwoWay}" 
                AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Проект" Binding="{Binding Path=Name}" Width="200"></DataGridTextColumn>
                    <DataGridTextColumn Header="Путь" Binding="{Binding Path=Path}" Width="300"></DataGridTextColumn>
                    <DataGridTextColumn Header="Сервер" Binding="{Binding Path=Server}" Width="300"></DataGridTextColumn>
                    <DataGridTemplateColumn Header="Базы данных" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Настроить базы" Click="EditDataBase_Click"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Удалить" Click="Button_Click"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
        <Button
            Width="75"
            Height="23"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Click="btnOK_Click"
            Content="OK"/>
    </Grid>
</Window>
