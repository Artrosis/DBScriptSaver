<Window
    x:Class="DBScriptSaver.fmProjectsEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DBScriptSaver"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:System="clr-namespace:System;assembly=mscorlib"
    xmlns:ns="clr-namespace:DBScriptSaver"
    mc:Ignorable="d"
    d:DesignWidth="1010"
    Icon="ico/main.ico"
    Title="Проекты"
    Background="BurlyWood"
    WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <ControlTemplate x:Key="validationFailed">
            <StackPanel Orientation="Horizontal">
                <Border BorderBrush="Violet" BorderThickness="2">
                    <AdornedElementPlaceholder />
                </Border>
                <TextBlock Foreground="Red" FontSize="24" FontWeight="Bold">!</TextBlock>
            </StackPanel>
        </ControlTemplate>
        <ObjectDataProvider x:Key="DBTypes" MethodName="GetValues"
                            ObjectType="{x:Type System:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="ns:DBType"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>
    <TabControl Background="Beige">
        <TabItem Header="Проекты">
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <StackPanel VerticalAlignment="Top" Orientation="Horizontal">
                        <Button
                            Width="75"
                            Height="23"
                            Margin="3"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Click="btnAddProject_Click"
                            Content="Добавить" />
                    </StackPanel>
                    <DataGrid
                        x:Name="gcProjects"
                        Width="auto"
                        Height="auto"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        AutoGenerateColumns="False"
                        ItemsSource="{Binding EditProjects}">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="200"
                                Binding="{Binding Path=Name, UpdateSourceTrigger=PropertyChanged}"
                                Header="Проект" />
                            <DataGridTextColumn
                                Width="300"
                                Binding="{Binding Path=Path, UpdateSourceTrigger=PropertyChanged}"
                                Header="Путь" />
                            <DataGridTemplateColumn Header="Сервер" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <ComboBox
                                            ItemsSource="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}, Path=DataContext.Servers}"
                                            DisplayMemberPath="Name"
                                            SelectedItem="{Binding Server, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            SelectedValue="{Binding Server.Name}"
                                            SelectedValuePath="Name"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Width="100" Header="Базы данных">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Click="EditDataBase_Click" Content="Настроить базы" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Click="Button_Click" Content="Удалить" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
                <Button
                    Width="75"
                    Height="23"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Click="btnOK_Click"
                    Content="OK" />
            </Grid>
        </TabItem>
        <TabItem Header="Сервера">
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <StackPanel VerticalAlignment="Top" Orientation="Horizontal">
                        <Button
                            Width="75"
                            Height="23"
                            Margin="3"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Click="btnAddServer_Click"
                            Content="Добавить" />
                    </StackPanel>
                    <DataGrid
                        x:Name="gcServers"
                        Width="auto"
                        Height="auto"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        AutoGenerateColumns="False"
                        ItemsSource="{Binding EditServers}">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="200"
                                Binding="{Binding Path=Name}"
                                Header="Название" />
                            <DataGridTextColumn
                                Width="200"
                                Binding="{Binding Path=Path}"
                                Header="Адрес" />
                            <DataGridTemplateColumn Header="Тип" Width="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <ComboBox
                                            ItemsSource="{Binding Source={StaticResource DBTypes}}"
                                            SelectedItem="{Binding Path=Type}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn
                                Width="150"
                                Binding="{Binding Path=DBLogin}"
                                Header="Логин" />
                            <DataGridTemplateColumn Width="100" Header="Пароль">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <PasswordBox PasswordChanged="pwdBox_PasswordChanged" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Click="ServerDelete_Click" Content="Удалить" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
                <Button
                    Width="75"
                    Height="23"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Click="btnOK_Click"
                    Content="OK" />
            </Grid>
        </TabItem>
        <TabItem Header="Настройки">
            <StackPanel>
                <Label Content="Инструмент сравнения" />
                <TextBox
                    x:Name="tbComparerPath"
                    Margin="2"
                    Validation.ErrorTemplate="{StaticResource validationFailed}">
                    <TextBox.Text>
                        <Binding Path="Comparer">
                            <Binding.ValidationRules>
                                <DataErrorValidationRule />
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
            </StackPanel>
        </TabItem>
    </TabControl>
</Window>
