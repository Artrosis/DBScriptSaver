<Window
    x:Class="DBScriptSaver.fmProjectsEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DBScriptSaver"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="800"
    Height="482.341"
    mc:Ignorable="d"
    Icon="ico/main.ico"
    Title="Проекты"
    WindowStartupLocation="CenterOwner">

    <Grid Margin="0,0,0,0">
        <DataGrid
            x:Name="gcProjects"
            Width="792"
            Height="399"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            ItemsSource="{Binding Projects}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Проект" Binding="{Binding Path=Name}" Width="200"></DataGridTextColumn>
                <DataGridTextColumn Header="Путь" Binding="{Binding Path=Path}" Width="400"></DataGridTextColumn>
                <DataGridTemplateColumn Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Удалить" Click="Button_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button
            x:Name="btnOK"
            Width="75"
            Height="23"
            Margin="627,404,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="btnOK_Click"
            Content="OK" />
        <Button
            x:Name="btnCancel"
            Width="75"
            Height="23"
            Margin="707,404,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="BtnCancel_Click"
            Content="Отмена"
            IsCancel="True" />
        <Button
            x:Name="btnOK_Copy"
            Width="75"
            Height="23"
            Margin="10,399,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="btnOK_Copy_Click"
            Content="Добавить" />
    </Grid>

</Window>
